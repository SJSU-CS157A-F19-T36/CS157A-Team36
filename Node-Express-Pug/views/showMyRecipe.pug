extends layout

block content
    url(id="item-list")
        for myRecipe in myRecipes
            li(class="item")
                img(alt="item image" src=myRecipe.image)
                div
                    a(class="item-name" href='/detail?id=' + myRecipe.id) #{myRecipe.name}
                    p Rating: 
						|#{rating}/5


