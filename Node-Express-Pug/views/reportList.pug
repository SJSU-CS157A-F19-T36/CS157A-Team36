extends layout

block content
	url(id="item-list")
		for report in list
			li(class="item")
				p UserID: #{report.userID}
				p RecipeID: #{report.recipeID}
				div
					a(class="item-name" href='/detail?id='+report.recipeID) #{report.recipeName}
					div(class="stars") Reason: 
						|#{report.context}
				div(class="report")
				form(action="/respondReport" method="POST")
					input(name="recipeID" type="hidden" value=report.recipeID)
					select(name="respondOption")
						if(admin.includes("1"))
							option(value="1")
								|Modify
						if(admin.includes("2"))
							option(value="2")
								|Delete
						option(value="3")
							|Ignore
					button(id="add-recipe-btn") RESPOND

