extends layout

block content
    header(class="top-header")
        nav(class="top-nav")
            a(href="/home") Home
            a(href="#") Profile
        span(id="welcome-msg") Welcome, #{user}
        a(id="logout-link" href="/logout") Logout
        i(id="avatar" class="avatar fa fa-user fa-2x")

    div(class="container")
        header
            p
                span Recipedia
        section(class="main-section")
            aside(id="item-nav")
                nav(class="main-nav")
                    a(href="/" id="show-btn" class="main-nav-btn active")
                        i(class="fa fa-search")   List Recipes
                    a(href="/add" id="add-btn" class="main-nav-btn active")
                        i(class="fa fa-map-marker")   Add Recipe
                    a(href="/listFav" id="fav-btn" class="main-nav-btn active")
                        i(class="fa fa-heart")   My Favorites
                    a(href="#" id="my-recp-btn" class="main-nav-btn active")
                        i(class="fa fa-bookmark")  My Recipes
            div(id="add-recipe")
                form(action="/addRecipe" method="POST")
                    h2 Add Your Own Recipe
                    label Recipe Name:
                    input(id="recipe-name" name="recipe-name" type="text")
                    label Ingredient:
                    TEXTAREA(id="recipe-ingredient" name="recipe-ingredient" type="text")
                    label Image(Please enter img url):
                    input(id="recipe-img" name="recipe-ing" type="text")
                    button(id="add-recipe-btn") ADD

